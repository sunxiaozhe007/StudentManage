    var div2=document.getElementsByClassName("div2")
    var ch=document.getElementsByClassName("ch")
    for(var i=div2.length-1;i>0;i--){
        div2[i].style.zIndex=i;
    }
    function fun1(){
        ch[index].style.backgroundColor="black";
        index++;
        if(index>=6){
            index=0;
        }
        ch[index].style.backgroundColor="white";
    }
    function lunbo(){
        for(var i=0;i<div2.length;i++){
            div2[i].style.opacity=0
            div2[i].style.zIndex--;
            if(div2[i].style.zIndex<0){
                div2[i].style.zIndex=5
            }
            if(div2[i].style.zIndex==5){
                div2[i].style.opacity=1;
            }
        }
        panduan();

        fun1();
    }
    time=setInterval(lunbo,2000);
    div1.onmouseenter=function(){
        clearInterval(time);
    }
    div1.onmouseleave=function(){
        time=setInterval(lunbo,2000);
    }
    function panduan(){
        for(var i=0;i<div2.length;i++){
            if(div2[i].style.zIndex==5){
                ch[i].style.backgroundColor="white";
            }
            if(div2[i].style.zIndex==4){
                ch[i].style.backgroundColor="black";
            }
            if(div2[i].style.zIndex==3){
                ch[i].style.backgroundColor="black";
            }

            if(div2[i].style.zIndex==2){
                ch[i].style.backgroundColor="black";
            }
            if(div2[i].style.zIndex==1){
                ch[i].style.backgroundColor="black";
            }
            if(div2[i].style.zIndex==0){
                ch[i].style.backgroundColor="black";
            }
        }
    }
    for(var i=0;i<ch.length;i++){
        ch[i].index=i;
        ch[i].onmouseenter=function(){
            var bindex=index;
            for(var j=0;j<ch.length;j++){
                ch[j].style.backgroundColor="black";
            }
            this.style.backgroundColor="white";
            var aindex=this.index-bindex<0?this.index-bindex+6:this.index-bindex;
            for(var b=0;b<aindex;b++){
                lunbo();
            }
        }
    }
